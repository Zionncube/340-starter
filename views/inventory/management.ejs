<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
  <body>
    <%- include('../partials/header') %>
    <%- include('../partials/nav') %>

    <main class="container">
      <h1>Inventory Management</h1>

      <% if (message && Object.keys(message).length) { %>
        <% if (message.success) { %>
          <div class="flash success"><%= message.success.join(' ') %></div>
        <% } %>
        <% if (message.error) { %>
          <div class="flash error"><%= message.error.join(' ') %></div>
        <% } %>
      <% } %>

      <ul>
        <li><a href="/inv/add-classification">Add New Classification</a></li>
        <li><a href="/inv/add-inventory">Add New Vehicle</a></li>
      </ul>

      <h2>Manage Inventory</h2>
      <p>Please select a classification from the list to see the items belonging to the classification.</p>

      <!-- EJS code block for classification list -->
      <form id="classificationForm">
        <label for="classificationList">Classification</label>
        <select id="classificationList" name="classification_id" required>
          <option value="">Choose a Classification</option>
          <% if (typeof classificationList !== 'undefined') { %>
            <%- classificationList %>
          <% } %>
        </select>
      </form>

      <!-- Empty table for inventory items -->
      <table id="inventoryDisplay"></table>

      <noscript>JavaScript must be enabled to use this page.</noscript>
    </main>

    <%- include('../partials/footer') %>
    <script src="../../js/inventory.js"></script>
  </body>
</html>