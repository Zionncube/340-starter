<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
  <body>
    <%- include('../partials/header') %>
    <%- include('../partials/nav') %>

    <main class="container">
      <h1>Add Vehicle</h1>

      <% if (message && message.error) { %>
        <div class="flash error"><%= message.error.join(' ') %></div>
      <% } %>

      <form action="/inv/update" method="POST" novalidate id="updateForm">
        <div>
          <label for="classificationList">Classification</label>
          <%- classificationList %>
        </div>

        <div>
          <label for="inv_make">Make</label>
          <input id="inv_make" name="inv_make" type="text" required value="<%= inv_make || '' %>">
        </div>

        <div>
          <label for="inv_model">Model</label>
          <input id="inv_model" name="inv_model" type="text" required value="<%= inv_model || '' %>">
        </div>

        <div>
          <label for="inv_year">Year (4 digits)</label>
          <input id="inv_year" name="inv_year" type="text" required pattern="\d{4}" value="<%= inv_year || '' %>">
        </div>

        <div>
          <label for="inv_price">Price</label>
          <input id="inv_price" name="inv_price" type="number" step="0.01" required value="<%= inv_price || '' %>">
        </div>

        <div>
          <label for="inv_miles">Mileage</label>
          <input id="inv_miles" name="inv_miles" type="number" required value="<%= inv_miles || '' %>">
        </div>

        <div>
          <label for="inv_color">Color</label>
          <input id="inv_color" name="inv_color" type="text" required value="<%= inv_color || '' %>">
        </div>

        <div>
          <label for="inv_image">Image path</label>
          <input id="inv_image" name="inv_image" type="text" value="<%= inv_image || '/images/no-image-available.png' %>">
        </div>

        <div>
          <label for="inv_thumbnail">Thumbnail path</label>
          <input id="inv_thumbnail" name="inv_thumbnail" type="text" value="<%= inv_thumbnail || '/images/no-image-available-tn.png' %>">
        </div>

        <div>
          <label for="inv_description">Description</label>
          <textarea id="inv_description" name="inv_description" required><%= inv_description || '' %></textarea>
        </div>

        <button type="submit" disabled>Update Vehicle</button>
        <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>" <% } %>>
      </form>

      <p><a href="/inv/">Back to management</a></p>
    </main>

    <%- include('../partials/footer') %>
    <script src="/js/inv-update.js"></script>
  </body>
</html>